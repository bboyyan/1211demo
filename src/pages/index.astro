---
// LUMIÈRE SPA 官方網站首頁
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/layout/Container.astro';
import Navbar from '../components/layout/Navbar.tsx';
import HeroSection from '../components/sections/HeroSection.tsx';
import PhilosophySection from '../components/sections/PhilosophySection.tsx';
import TreatmentSection from '../components/sections/TreatmentSection.tsx';
import StatsSection from '../components/sections/StatsSection.tsx';
import CTASection from '../components/sections/CTASection.tsx';
import Footer from '../components/layout/Footer.astro';
import FloatingButton from '../components/ui/FloatingButton.tsx';
---

<BaseLayout>
	<Container>
		<!-- Navigation -->
		<Navbar client:load />

		<!-- Hero Section -->
		<HeroSection client:visible />

		<!-- Content Sections -->
		<div class="bg-brand-surface relative pt-20 md:pt-32 pb-20 px-6 md:px-16 overflow-hidden">
			<!-- Background Decoration -->
			<div class="absolute top-20 right-0 text-[100px] md:text-[200px] leading-none font-display text-neutral-100 opacity-60 pointer-events-none select-none z-0">
				Luxe
			</div>

			<div class="container mx-auto relative z-10">
				<!-- Philosophy Section -->
				<PhilosophySection client:visible />

				<!-- Treatment Section -->
				<TreatmentSection client:visible />

				<!-- Stats Section -->
				<StatsSection client:visible />

				<!-- CTA Section -->
				<CTASection client:visible />
			</div>
		</div>

		<!-- Footer -->
		<Footer />

		<!-- Mobile Floating Button -->
		<FloatingButton client:load />
	</Container>
</BaseLayout>
